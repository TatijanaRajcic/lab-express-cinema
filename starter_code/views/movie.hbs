<div class="one-movie-container">

  <article class="one-movie-content-container">

    <a href="/movies">Go back</a>

    <div class="one-movie-img-container">
      <img src="{{movie.image}}" alt="">
    </div>

    <h1>{{movie.title}}</h1>

    <p class="bold">{{movie.director}}</p>

    <p class="bold">Stars</p>
    <ul class="star-list">
      {{#each movie.stars}}
        <li>{{this}}</li>
      {{/each}}
    </ul>

    <p>{{movie.description}}</p>

    <p>
      {{#each movie.showtimes}}
        {{this}} |
      {{/each}}
    </p>
    
  </art>
</div>